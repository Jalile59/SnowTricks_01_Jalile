{% extends "DJviewBundle::template.html.twig" %}




{% block content %}
    
    <!-- Portfolio Modals -->
    
<!-- Page Content -->
    <div class="container" style="margin-top: 200px;">
        <div class="row">
            
            <!-- Blog Post Content Column -->
            <div id="principale" class="col-lg-10 col-lg-offset-1">

                <!-- Blog Post -->

                <!-- Title -->
                <h1>{{figure.figureName}}</h1>

                <!-- Author -->
                <p class="lead">
                    by <a id="auteur" idarticle="{{ figure.id }}" href="#">Auteur</a>
                </p>

                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> {{figure.figureCreateDate|date('d-M-Y')}}</p>

                <hr>

                <!-- Preview Image -->
                <div id="imagePincipale" class="screen">
                    <div class="col-lg-1 col-lg-offset-10" >
                        
                       
                       
                    </div>
                    <div class="col-lg-1" >
                        <a href="" id="supppicture"><img src="{{asset('public/img/supprimer.png')}}" alt=""></a>
                    </div>
                {% if figure.picture|length == 0 %}
                    <img id="pictureP" class="img-responsive displayed" style="margin-left: auto; margin-right: auto;" src="{{asset('images/')}}{{noimage}}" alt="">
                {% else %} 
                     {% for figure in figure.picture %}
                    {% if loop.index == 1 %}
                        <img id="pictureP" idpicture="{{figure.id}}" linknoimage="{{asset('images/')}}{{noimage}}" class="img-responsive displayed" style="margin-left: auto; margin-right: auto;" src="{{asset('images/')}}{% if figure.pictureLink %}{{figure.pictureLink}}{% else %}{{noimage}} {% endif %}" alt="">
                    {% endif %}

                {% endfor %}
                {% endif %}
               
                </div>
                <div id="videoprincipale" onclick="tes(this)" >
                </div>
                <hr>
                <div class="row" >
                    {% for figure in figure.picture %}
                    <div id="div{{ figure.id }}" class="col-md-2" style="margin-top: 5px" >
                        <div class="row" >
                            <div class="col-lg-3 col-lg-offset-2" >
                                <a href="#" id="picture{{ figure.id }}" idpict="{{ figure.id }}" onclick="suppPicture(this, event)" ><img src="{{asset('public/img/supprimer.png')}}" alt=""></a>
                            </div>
                            <div class="col-lg-3 col-lg-offset-1" >
                                <div id="fileuploader" class="{{ loop.index }}" idphoto="{{figure.id}}"> </div>
                            </div>                        
                        </div> 
                        <div>
                         <a href="#"id='image{{loop.index}}' ><img id="{{figure.id}}"  class="img-responsive displayed img" style="margin-left: auto; margin-right: auto;" src="{{asset('images/')}}{{figure.pictureLink}}" alt="" onclick="tes(this)"></a>                        
                        </div>
                    </div>
                    {% endfor %}
                    {% for figure in figure.videofigure %}
                    <div id="div{{ figure.id }}" class="col-md-2"style="margin-top: 5px">
                        <div class="row" >
                            <div class="col-lg-3 col-lg-offset-3" >
                                <a href="javascript:void(0);" ><img idvideo="{{figure.id}}" id="mvideo{{figure.id}}" src="{{asset('public/img/bouton-modifier_318-77528.png')}}" alt="" onclick="modifvideo(this)"></a>
                            </div>
                            <div class="col-lg-3" >
                                <a href="#"  idvideo="{{ figure.id }}" onclick="suppVideo(this, event)"><img src="{{asset('public/img/supprimer.png')}}" alt=""></a>
                            </div>
                        </div>
                        
                        <div class="row" >
                            <div class="col-lg-12" >
                            <a id="video{{figure.id}}" class="video" href="#" >{{figure.videolink|raw}}</a>
                            </div>
                            <div class="col-lg-2 subm" id="subm{{figure.id}}">
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <hr>
                
                <hr>

                <!-- Post Content -->
               
                <div>
                    <form id=formdescription method="post">
                        <textarea id="desciption" rows="15" cols="120" type="text" name="description"/> {{figure.figureDescription}}</textarea>
                    
                    <input id="submitform" class="btn btn-primary" type="submit"/>
                    </form> 
                        <div style="margin-top: 10px;" >
                            <a href="{{path('d_jview_delfigure',{id: figure.id})}}" ><button type="button" class="btn btn-danger">Supprimer</button></a>

                        </div>
                </div>

           
                <hr>
                
                <hr>
                <div class="row">
                    <div class="col-md-4">
                        <a> Auteur: Djal</a>
                    </div>
                    <div class="col-md-4">
                        <a> </a>
                    </div>
                    <div class="col-md-4">
                        <a> </a>
                    </div>

                
                </div>
                <hr>


            </div>
        </div>

            <!-- Blog Sidebar Widgets Column -->

        <!-- /.row -->


        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright </p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <!-- /.container -->
    
<script src="{{asset('public/jsp/ajax_description_update.js')}}"></script>
<script src="{{asset('public/jsp/imageprincipale.js')}}"></script>

<script src="{{asset('public/jsp/jquery.uploadfile.min.js')}}"></script>

<script src="{{asset('public/jsp/image_modif_upload_ajax.js')}}"></script>

<script src="{{asset('public/jsp/ajax_supp_picture.js')}}"></script>

<script src="{{asset('public/jsp/video_modifi_input_ajax.js')}}"></script>
<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
 <script>tinymce.init({ selector:'#desciption' });</script>

  

               

{% endblock %}
