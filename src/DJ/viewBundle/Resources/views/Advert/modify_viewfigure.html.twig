    {
       
        id = '#image'+element.getAttribute('class');
        console.log(element.getAttribute('class'));
        picture = document.querySelector(id);
        idpicture = picture.childNodes[0].id;
        
        console.log(picture.childNodes[0].id);
        
        
        
                    
              return idpicture;
    }
    
    
$(document).ready(function()
{       
   
    for (i=0; i<elements.length; i++){ 

