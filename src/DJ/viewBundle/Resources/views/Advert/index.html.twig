{% extends "DJviewBundle::template.html.twig" %}


{% block content %}

     <!-- Page Content -->
    <div class="container-fluid" style="margin-top: 120px; padding: 0px;">

        <!-- Jumbotron Header -->
        
        <header class="jumbotron hero-spacer" style="background-image: url('../public/img/petit som avalanche.jpg');background-size: 100%; height: 900px; " >
            <h1>Bienvenue sur SnowTricks</h1>
            <p></p>
            <p><a class="btn btn-primary btn-large">Voir les figures</a>
            </p>
        </header>

        <hr>

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3>Dernier Figures</h3>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">
            
            {%for figure in figure%}
            <div class="col-md-2 col-sm-6 hero-feature card" style="margin: 15px; height: 450px;" >
                <div class="thumbnail">
                    <div class="row">
                        <div class="col-md-6">
                            <a>Auteur:</a>
                        </div>
                        <div class="col-md-2 col-md-offset-2">
                           <a href="/SnowTricks_01/web/app_dev.php/supprimerFigure/{{figure.id}}"onclick="popdeleted(this)"><img src="../public/img/supprimer.png" alt=""></a>
                        </div>
                        <div class="col-md-2" style="align-content: center">
                           <a href="#"><img src="../public/img/bouton-modifier_318-77528.jpg" alt=""></a> 
                        </div>

                    </div>
                    
                    <img src="../imagesacueill/{{figure.pictureacceuil}}" alt="">
                    
                    <div class="caption">
                        <h3>{{figure.figureName}}</h3>
                        <p>{{figure.figureDescription|truncate(50, false, '...')}}</p>
                        <p>
                             <a href="{{path('d_jview_detailfigure', {'id': figure.id})}}" class="btn btn-default">Voir plus...</a>
                        </p>
                    </div>
                        <div>
                            <a>Date de cration: {{figure.figureCreatedate|date('d-M-Y')}}</a>
                        </div>
                </div>
            </div>
            {%endfor%}
  
        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

<script src="{{asset('public/jsp/messagedelelted.js')}}"></script>

    
    
{% endblock %}
