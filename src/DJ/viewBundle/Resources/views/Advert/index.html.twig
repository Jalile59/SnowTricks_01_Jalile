{% extends "DJviewBundle::template.html.twig" %}


{% block content %}

     <!-- Page Content -->
    <div class="container-fluid" style="margin-top: 120px; padding: 0px;">

        <!-- Jumbotron Header -->
        
        <header class="jumbotron hero-spacer" style="background-image: url('../public/img/petit som avalanche.jpg');background-size: 100%; height: 900px; " >
            <h1>Bienvenue sur SnowTricks</h1>
            <p></p>
            <p><a class="btn btn-primary btn-large">Voir les figures</a>
            </p>
        </header>

        <hr>

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3>Dernier Figures</h3>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">
            
            {%for figure in figure%}
            <div class="col-md-2 col-sm-6 hero-feature card" style="margin: 15px; height: 500px;" >
                <div class="thumbnail">
                
                    <img src="../images/{{figure.pictureacceuil}}" alt="">
                    
                    <div class="caption">
                        <h3>{{figure.figureName}}</h3>
                        <p>{{figure.figureDescription|truncate(50, false, '...')}}</p>
                        <p>
                             <a href="#" class="btn btn-default">Voir plus...</a>
                        </p>
                    </div>
                        <div>
                            <a>Date de cration: {{figure.figureCreatedate|date('d-M-Y')}}</a>
                        </div>
                </div>
            </div>
            {%endfor%}
  
        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    
    
{% endblock %}
